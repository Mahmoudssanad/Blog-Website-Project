@using Blog_System.Models.Entities
@model List<UserApplication>

@{
    ViewData["Title"] = "Users";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .user-list {
        max-width: 600px;
        margin: auto;
    }

    .user-item {
        display: flex;
        align-items: center;
        padding: 12px;
        border-bottom: 1px solid #eaeaea;
        transition: background 0.2s ease;
    }

        .user-item:hover {
            background-color: #f8f9fa;
        }

    .user-avatar {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 16px;
    }

    .user-name {
        font-weight: 600;
        font-size: 1.1rem;
        color: #212529;
        text-decoration: none;
    }

        .user-name:hover {
            text-decoration: underline;
        }
</style>

<div class="container mt-4 user-list">
    <h4 class="mb-4 text-center text-primary">Users</h4>

    @foreach (var item in Model)
    {
        <div class="user-item">
            <img src="~/Images/@(item.Image ?? "image.png")"
                 alt="User Image"
                 class="user-avatar" />
            <a href="@Url.Action("Profile", "Profile", new { id = item.Id })" class="user-name">
                @item.UserName
            </a>
        </div>
    }
</div>
