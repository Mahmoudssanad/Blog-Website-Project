@using Blog_System.Models.Entities

@model List<UserApplication>
@{
    ViewData["Title"] = "Index";
}

@* هتعمل جدول عشان اظهر فيه كل اليوزرز اللي عندي وجمب كل واحد لينك البروفايل بتاعه *@

<table>
    <thead>
        <tr>
            <th>User Name</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td><a href="@Url.Action("Profile", "Profile", new { id = item.Id })">@item.UserName</a></td>
                @if(item.Image != null)
                {
                    <td><img src="~/Images/@item.Image" style="width:64px" /></td>
                }
                else
                {
                    <td><img src="~/Images/image.png" style="width:128px" /></td>
                }
            </tr>
        }
        
    </tbody>
</table>