@using Blog_System.Servicies
@using Microsoft.AspNetCore.Antiforgery
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blog_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-qzR4+S1Ry6P5M3Y0xF+PBz8rA9oT+3PpqDskN5cD9P0oydOKvV+NNMeZZN1xK3w7" crossorigin="anonymous">

    <style>
        .navbar .nav-link {
            color: #333;
            position: relative;
        }

            .navbar .nav-link:hover {
                color: #0d6efd;
            }

        .dropdown-menu {
            min-width: 220px;
        }
    </style>

    <script type="importmap"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <header>
        @inject ICurrentUserService CurrentUserService
        @{
            var userTask = CurrentUserService.GetCurrentUserAsync();
            userTask.Wait(); // مؤقتًا لعرض البيانات في Layout، مش مثالي لكنه شغال
            var currentUser = userTask.Result;
        }

        @* Layout or Shared Navbar View *@
        @* Enhanced Navbar with Notifications & Messages *@
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom sticky-top py-2">
            <div class="container-fluid">
                <!-- Add + Search in same row -->
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom py-2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Post" asp-action="Add" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-plus-circle"></i>
                        </a>
                    }

             
                </nav>
                
                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Main Content -->
                <div class="collapse navbar-collapse" id="navbarContent">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!--Profile image-->
                        <a asp-controller="Profile" asp-action="Profile" asp-route-id="@currentUser.Id" class="d-flex align-items-center text-decoration-none">
                            <img src="~/Uploads/@(currentUser.Image ?? "image.png")"
                                 class="rounded-circle border" width="36" height="36" alt="Profile"
                                 style="object-fit: cover;" />
                        </a>

                        <!-- Logout -->
                        @* <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline"> *@
                        @*     <button type="submit" class="btn btn-outline-danger btn-sm px-3">Logout</button> *@
                        @* </form> *@
                    }
                    else
                    {
                        <form asp-controller="Account" asp-action="Login" method="get">
                            <button class="btn btn-outline-primary btn-sm">Login</button>
                        </form>
                    }

                    <div class="d-flex align-items-center gap-3">

                        

                        @* Messages *@
                        <div class="dropdown">
                            <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-envelope fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">
                                    2
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li><h6 class="dropdown-header">Messages</h6></li>
                                <li><a class="dropdown-item" href="#">John: Hey, are you free?</a></li>
                                <li><a class="dropdown-item" href="#">Anna: Check this out!</a></li>
                            </ul>
                        </div>

                        @* Notifications *@
                        @* <a asp-controller="Notification" asp-action="Index" class="nav-link position-relative"> *@
                        @*     <i class="fas fa-bell fs-5"></i> *@
                        @* </a> *@
                        @* @await Component.InvokeAsync("Notification") *@


                    </div>
                </div>

                                                            <!-- Centered Links -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Shorts Icon -->
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="" asp-action="">
                                <i class="bi bi-play-btn-fill me-1"></i> Shorts
                            </a>
                        </li>

                        <!-- Users Icon -->
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="User" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i> Users
                            </a>
                        </li>

                        <!-- Home Icon -->
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Home
                            </a>
                        </li>
                    }

                    </ul>

                @await Component.InvokeAsync("Notification")


                <!-- Search Input -->
                <div class="row">
                    <div class="col-md-6">
                        <form class="d-flex" asp-action="SearchUsers" asp-controller="Search">
                            <input name="query" class="form-control me-1" type="search" aria-label="Search" />
                            <button class="btn btn-dark" type="submit">search by name</button>
                        </form>
                    </div>
                </div>
                
                @* <input id="searchInput" *@
                @*        class="form-control form-control-sm" *@
                @*        type="search" *@
                @*        placeholder="Search..." *@
                @*        aria-label="Search" *@
                @*        style="width: 180px;"> *@

                @* <div id="searchResults"></div> *@


                <!-- Logo -->
                <a class="navbar-brand fw-bold text-primary fs-4" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/logo.png" width="50px" />
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS (optional, for dropdowns, modals, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-QzEPM1Ed+jXDbLn6a3weFZ2c5vBkzzbB3O8k4Pz6tHvduzflEInEykO2I3UgAhBj" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/microsoft-signalr/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        connection.on("ReceiveNotification", function (content, redirectUrl) {
            // 1) زود العدد
            let badge = document.querySelector("#notification-badge");
            if (badge) {
                let count = parseInt(badge.innerText) || 0;
                badge.innerText = count + 1;
            }

            // 2) أضف الإشعار للقائمة
            let list = document.querySelector("#notification-list");
            if (list) {
                let li = document.createElement("li");
                li.innerHTML = `<a class="dropdown-item" href="${redirectUrl}">${content}</a>`;
                list.prepend(li); // يضيفه فوق
            }
        });

        connection.start();
    </script>


    <script>
        $(document).ready(function () {
            $('#searchInput').on('keypress', function (e) {
                if (e.which === 13) { // Enter key
                    e.preventDefault();

                    let query = $(this).val().trim();
                    if (query.length === 0) return;

                    $.ajax({
                        url: '/Search/SearchUsers', // MVC endpoint
                        type: 'GET',
                        data: { query: query },
                        success: function (data) {
                            // Handle the results (you can append them somewhere in the page)
                            console.log('Search results:', data);
                            $('#searchResults').html(data); // Example: render partial view
                        },
                        error: function (xhr) {
                            console.error('Search error:', xhr.responseText);
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
