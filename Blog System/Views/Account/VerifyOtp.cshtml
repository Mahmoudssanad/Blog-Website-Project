@model Blog_System.ViewModel.OtpViewModel

@{
    ViewData["Title"] = "Verify OTP";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Blog_System.styles.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">OTP Verification</h3>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info text-center">
                            @TempData["Message"]
                        </div>
                    }

                    <!-- Verify OTP Form -->
                    <form asp-action="VerifyOtp" method="post">
                        <input type="hidden" asp-for="Email" />
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Otp" class="form-label">Enter OTP</label>
                            <input asp-for="Otp" class="form-control" placeholder="Enter the 6-digit code" />
                            <span asp-validation-for="Otp" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Verify</button>
                        </div>
                    </form>

                    <!-- Resend OTP Link -->
                    <div class="mt-3 text-center">
                        <p class="text-muted">
                            Didn’t receive the code?
                            <a asp-action="ResendOtp" asp-route-email="@Model.Email">Resend OTP</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
